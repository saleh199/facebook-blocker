{
  "manifest_version": 2,

  "name": "Facebook Blocker",
  "description": "Close facebook tabs after 1 minutes",
  "version": "1.0",

  "background": {
    "scripts" : ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}

